@using EntityLayer.Concrete
@model List<Image>

@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Galeri</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Ekko Lightbox -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.css" rel="stylesheet">
    <style>
        .gallery-image {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

            .gallery-image:hover {
                transform: scale(1.05);
            }

        .filter-button {
            margin: 5px;
            border-radius: 20px;
        }
    </style>
</head>

<body>
    <!-- Page Header -->
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-md-6">
                <h1 class="text-primary fw-bold">Galeri</h1>
            </div>
            <div class="col-md-6 text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Galeri</li>
                    </ol>
                </nav>
            </div>
        </div>



        <!-- Gallery -->
        <div class="row g-3">
            @foreach (var item in Model)
            {

                <div class="col-md-3 gallery-item" data-category="white">
                    <a href="@item.ImagePath" data-toggle="lightbox" data-gallery="gallery">
                        <img src="@item.ImagePath" class="img-fluid gallery-image" alt="White Image">
                    </a>
                </div>
            }
        </div>
    </div>
  
    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.min.js"></script>
    <script>
        // Lightbox
        $(document).on('click', '[data-toggle="lightbox"]', function (event) {
            event.preventDefault();
            $(this).ekkoLightbox();
        });

        // Filter Gallery
        $('.filter-button').on('click', function () {
            const filter = $(this).data('filter');
            $('.filter-button').removeClass('active');
            $(this).addClass('active');

            $('.gallery-item').show();
            if (filter !== 'all') {
                $('.gallery-item').not(`[data-category="${filter}"]`).hide();
            }
        });
    </script>
</body>

</html>
