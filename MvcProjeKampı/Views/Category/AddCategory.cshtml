@model EntityLayer.Concrete.Category
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kategori Ekle</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 15px;
        }

        .btn-success {
            border-radius: 20px;
            padding: 10px 20px;
        }

        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
        }

        .validation-message {
            color: #dc3545;
            font-size: 0.9rem;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
                {
                    <div class="card shadow-lg">
                        <div class="card-header bg-success text-white text-center">
                            <h4 class="mb-0">Kategori Ekle</h4>
                        </div>
                        <div class="card-body">
                            <!-- Kategori Adı -->
                            <div class="mb-4">
                                @Html.Label("Kategori Adı", new { @class = "form-label fw-bold" })
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori adını giriniz..." })
                                @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "validation-message" })
                            </div>

                            <!-- Açıklama -->
                            <div class="mb-4">
                                @Html.Label("Açıklama Giriniz", new { @class = "form-label fw-bold" })
                                @Html.TextAreaFor(x => x.CategoryDescrition, new { @class = "form-control", rows = "4", placeholder = "Açıklama giriniz..." })
                                @Html.ValidationMessageFor(x => x.CategoryDescrition, "", new { @class = "validation-message" })
                            </div>

                            <!-- Durum -->
                            <div class="mb-4">
                                @Html.Label("Durum", new { @class = "form-label fw-bold" })
                                <div class="form-check">
                                    @Html.RadioButtonFor(x => x.CategoryStatus, true, new { @class = "form-check-input", id = "active" })
                                    <label class="form-check-label" for="active">Aktif</label>
                                </div>
                                <div class="form-check">
                                    @Html.RadioButtonFor(x => x.CategoryStatus, false, new { @class = "form-check-input", id = "inactive" })
                                    <label class="form-check-label" for="inactive">Pasif</label>
                                </div>
                                @Html.ValidationMessageFor(x => x.CategoryStatus, "", new { @class = "validation-message" })
                            </div>

                            <!-- Kaydet Butonu -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-success">Kaydet</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>





