@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Table Example</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h3 class="mb-4 text-center">MVC Kamp Tablo Örneği - Kategori</h3>
        <table class="table table-striped table-hover table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Kategori Id</th>
                    <th>Kategori Adı</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Eğitim</td>
                    <td>Bu kategori eğitim içeriklerini kapsar.</td>
                    <td><span class="badge bg-success">Aktif</span></td>
                    <td>
                        <button class="btn btn-warning btn-sm">Güncelle</button>
                        <button class="btn btn-danger btn-sm">Sil</button>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Spor</td>
                    <td>Bu kategori spor etkinliklerini içerir.</td>
                    <td><span class="badge bg-success">Aktif</span></td>
                    <td>
                        <button class="btn btn-warning btn-sm">Güncelle</button>
                        <button class="btn btn-danger btn-sm">Sil</button>
                    </td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Teknoloji</td>
                    <td>Bu kategori teknoloji haberlerini kapsar.</td>
                    <td><span class="badge bg-danger">Pasif</span></td>
                    <td>
                        <button class="btn btn-warning btn-sm">Güncelle</button>
                        <button class="btn btn-danger btn-sm">Sil</button>
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Yeni Kategori Girişi Butonu -->
        <div class="text-end">
            <a href="/Category/AddCategory/" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle"></i> Yeni Kategori Girişi
            </a>
        </div>

    </div>
    <!-- Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
