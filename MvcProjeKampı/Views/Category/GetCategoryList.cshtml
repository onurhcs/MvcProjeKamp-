@using EntityLayer.Concrete
@model List<Category>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kategori Tablosu</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .table-container {
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            background: #ffffff;
            border-radius: 8px;
            padding: 20px;
        }

        table th, table td {
            vertical-align: middle;
        }

        .btn-action {
            margin-right: 5px;
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h3 class="mb-4 text-center fw-bold">Kategori Yönetim Paneli</h3>
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>Kategori Id</th>
                            <th>Kategori Adı</th>
                            <th>Açıklama</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.CategoryName</td>
                                <td>
                                    @(item.CategoryDescrition.Length > 50
                                        ? item.CategoryDescrition.Substring(0, 50) + "..."
                                        : item.CategoryDescrition)
                                </td>
                                <td>
                                    @if (item.CategoryStatus)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <a href="/Category/Edit/@item.CategoryId" class="btn btn-warning btn-sm btn-action">
                                        <i class="bi bi-pencil-square"></i> Güncelle
                                    </a>
                                    <a href="/Category/Delete/@item.CategoryId" class="btn btn-danger btn-sm btn-action">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Yeni Kategori Girişi Butonu -->
            <div class="text-end">
                <a href="/Category/AddCategory/" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
                </a>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
