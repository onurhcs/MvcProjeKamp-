@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
            {
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="mb-0">Kategori Ekle</h4>
                    </div>
                    <div class="card-body">
                        <!-- Kategori Adı -->
                        <div class="mb-3">
                            @Html.Label("Kategori Adı", new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori adını giriniz..." })
                            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger mt-1" })
                        </div>

                        <!-- Açıklama -->
                        <div class="mb-3">
                            @Html.Label("Açıklama Giriniz", new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(x => x.CategoryDescrition, new { @class = "form-control", rows = "4", placeholder = "Açıklama giriniz..." })
                            @Html.ValidationMessageFor(x => x.CategoryDescrition, "", new { @class = "text-danger mt-1" })
                        </div>

                        <!-- Durum -->
                        <div class="mb-3">
                            @Html.Label("Durum", new { @class = "form-label fw-bold" })
                            <div class="form-check">
                                @Html.RadioButtonFor(x => x.CategoryStatus, true, new { @class = "form-check-input", id = "active" })
                                <label class="form-check-label" for="active">Aktif</label>
                            </div>
                            <div class="form-check">
                                @Html.RadioButtonFor(x => x.CategoryStatus, false, new { @class = "form-check-input", id = "inactive" })
                                <label class="form-check-label" for="inactive">Pasif</label>
                            </div>
                            @Html.ValidationMessageFor(x => x.CategoryStatus, "", new { @class = "text-danger mt-1" })
                        </div>

                        <!-- Kaydet Butonu -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-50">Kaydet</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

