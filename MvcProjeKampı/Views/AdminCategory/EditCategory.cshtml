@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "Kategori Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-gradient-primary text-white text-center rounded-top">
                    <h4 class="mb-0">Kategori Düzenle</h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
                    {
                        <!-- Kategori Id -->
                        <div class="mb-4">
                            @Html.Label("Kategori ID", new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control bg-light border-0" })
                        </div>

                        <!-- Kategori Adı -->
                        <div class="mb-4">
                            @Html.Label("Kategori Adı", new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control bg-light border-0", placeholder = "Kategori adını giriniz..." })
                            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <!-- Kategori Açıklaması -->
                        <div class="mb-4">
                            @Html.Label("Kategori Açıklaması", new { @class = "form-label fw-semibold" })
                            @Html.TextAreaFor(x => x.CategoryDescrition, new { @class = "form-control bg-light border-0", rows = "5", placeholder = "Kategori açıklamasını giriniz..." })
                            @Html.ValidationMessageFor(x => x.CategoryDescrition, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <!-- Buton -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary rounded-pill shadow-sm py-2">
                                <i class="fa fa-save me-2"></i>Kaydet
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(90deg, #007bff, #0056b3);
    }

    .rounded-4 {
        border-radius: 1rem;
    }
