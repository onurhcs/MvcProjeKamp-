@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Yeni Mesaj Oluştur</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Summernote -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

        .btn-custom {
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 50px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <!-- Sol Menü -->
            <div class="col-md-3">
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Klasörler</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a href="#" class="text-decoration-none text-dark"><i class="fas fa-inbox me-2"></i> Gelen Kutusu</a></li>
                        <li class="list-group-item"><a href="#" class="text-decoration-none text-dark"><i class="far fa-envelope me-2"></i> Gönderilenler</a></li>
                        <li class="list-group-item"><a href="#" class="text-decoration-none text-dark"><i class="far fa-file-alt me-2"></i> Taslaklar</a></li>
                        <li class="list-group-item"><a href="#" class="text-decoration-none text-dark"><i class="fas fa-trash-alt me-2"></i> Çöp</a></li>
                    </ul>
                </div>
            </div>

            <!-- Sağ İçerik -->
            <div class="col-md-9">
                <div class="form-container shadow-sm">
                    <h3 class="text-primary mb-4">Yeni Mesaj Oluştur</h3>
                    <form>
                        <div class="mb-3">
                            <label for="to" class="form-label fw-bold">Alıcı</label>
                            <input type="email" class="form-control" id="to" placeholder="Alıcı e-posta adresi">
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label fw-bold">Konu</label>
                            <input type="text" class="form-control" id="subject" placeholder="Mesaj Konusu">
                        </div>
                        <div class="mb-3">
                            <label for="compose-textarea" class="form-label fw-bold">Mesaj İçeriği</label>
                            <textarea id="compose-textarea" class="form-control"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="file" class="form-label fw-bold">Dosya Ekle</label>
                            <input type="file" class="form-control" id="file">
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="reset" class="btn btn-secondary btn-custom me-2">
                                <i class="fas fa-times"></i> İptal
                            </button>
                            <button type="submit" class="btn btn-primary btn-custom">
                                <i class="far fa-envelope"></i> Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Summernote -->
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#compose-textarea').summernote({
                placeholder: 'Mesajınızı buraya yazın...',
                tabsize: 2,
                height: 300
            });
        });
    </script>
</body>
</html>
