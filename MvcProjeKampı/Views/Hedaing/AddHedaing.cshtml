@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "Yeni Başlık Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="font-weight-light">Yeni Başlık Ekle</h3>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("AddHedaing", "Hedaing", FormMethod.Post))
                    {
                        <!-- Başlık Adı -->
                        <div class="form-group mb-4">
                            <label for="HeadingName" class="form-label text-dark font-weight-bold">Başlık Adı</label>
                            @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control rounded-pill", placeholder = "Başlık adını giriniz" })
                            @Html.ValidationMessageFor(x => x.HeadingName, "", new { @class = "text-danger mt-1" })
                        </div>

                        <!-- Kategori -->
                        <div class="form-group mb-4">
                            <label for="CategoryId" class="form-label text-dark font-weight-bold">Kategori</label>
                            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-select rounded-pill" })
                            @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "text-danger mt-1" })
                        </div>

                        <!-- Başlık Tarihi -->
                        <div class="form-group mb-4">
                            <label for="HeadingDate" class="form-label text-dark font-weight-bold">Başlık Tarihi</label>
                            @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control rounded-pill", type = "date" })
                            @Html.ValidationMessageFor(x => x.HeadingDate, "", new { @class = "text-danger mt-1" })
                        </div>

                        <!-- Yazar -->
                        <div class="form-group mb-4">
                            <label for="WriterId" class="form-label text-dark font-weight-bold">Yazar</label>
                            @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.vlw, new { @class = "form-select rounded-pill" })
                            @Html.ValidationMessageFor(x => x.WriterId, "", new { @class = "text-danger mt-1" })
                        </div>

                        <!-- Submit Butonu -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill">
                                <i class="fas fa-plus-circle"></i> Başlığı Oluştur
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
