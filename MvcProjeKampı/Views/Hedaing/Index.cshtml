@using EntityLayer.Concrete
@model List<Heading>

@{
    ViewBag.Title = "Başlıklar Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="text-primary font-weight-bold">Başlıklar Yönetimi</h1>
                </div>
                <div class="col-sm-6 text-right"> 
                    <a href="/Hedaing/AddHedaing/" class="btn btn-success btn-sm">
                        <i class="fas fa-plus-circle"></i> Yeni Başlık Ekle
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="card shadow-sm">
            <div class="card-header bg-gradient-primary text-white d-flex align-items-center justify-content-between">
                <h3 class="card-title mb-0">
                    <i class="fas fa-tasks me-2"></i> Başlık İşlemleri
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool text-white" data-card-widget="collapse" data-toggle="tooltip" title="Daralt">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool text-white" data-card-widget="remove" data-toggle="tooltip" title="Kaldır">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>

            <div class="card-body p-0">
                <table class="table table-striped table-hover projects">
                    <thead class="bg-light">
                        <tr>
                            <th style="width: 5%">#</th>
                            <th style="width: 35%">Başlık Adı</th>
                            <th style="width: 25%">Oluşturan Yazar</th>
                            <th style="width: 15%" class="text-center">Kategori</th>
                            <th style="width: 20%" class="text-center">Aksiyon</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.HeadingId</td>
                                <td>
                                    <a href="#" class="text-primary font-weight-bold">@item.HeadingName</a>
                                    <br />
                                    <small class="text-muted">
                                        <i class="fas fa-calendar-alt"></i> @item.HeadingDate.ToString("dd MMMM yyyy dddd")
                                    </small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img alt="Avatar" class="rounded-circle me-2" src="@item.Writer.WriterImage" style="width: 40px; height: 40px;">
                                        <span class="font-weight-bold">@item.Writer.WriterName @item.Writer.WriterSurname</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-info">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-center">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingId">
                                        <i class="fas fa-folder"></i> Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Hedaing/EditHeading/@item.HeadingId">
                                        <i class="fas fa-pencil-alt"></i> Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/Hedaing/DeleteHeading/@item.HeadingId">
                                        <i class="fas fa-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>

</html>
