@model List<EntityLayer.Concrete.Contact>
@{
    ViewBag.Title = "GetContactDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mesaj Oku</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>

<body class="hold-transition sidebar-mini">
    <div class="container mt-4">
        <!-- Sayfa Başlığı -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-primary">Mesaj Oku</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Mesaj Oku</li>
                </ol>
            </nav>
        </div>

        <div class="row">
            <!-- Sol Menü -->
            <div class="col-md-3">
                <a href="mailbox.html" class="btn btn-primary btn-block mb-3">
                    <i class="fas fa-arrow-left"></i> Gelen Kutusuna Dön
                </a>
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Klasörler</h5>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <i class="fas fa-inbox me-2"></i> Gelen Kutusu
                                <span class="badge bg-primary">12</span>
                            </li>
                            <li class="list-group-item"><i class="far fa-envelope me-2"></i> Gönderilenler</li>
                            <li class="list-group-item"><i class="far fa-file-alt me-2"></i> Taslaklar</li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <i class="fas fa-filter me-2"></i> Gereksiz
                                <span class="badge bg-warning">65</span>
                            </li>
                            <li class="list-group-item"><i class="far fa-trash-alt me-2"></i> Çöp</li>
                        </ul>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Etiketler</h5>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><i class="far fa-circle text-danger me-2"></i> Önemli</li>
                            <li class="list-group-item"><i class="far fa-circle text-warning me-2"></i> Promosyonlar</li>
                            <li class="list-group-item"><i class="far fa-circle text-primary me-2"></i> Sosyal</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Mesaj İçeriği -->
            <div class="col-md-9">
                <div class="card shadow-sm">
                    @foreach (var item in Model)
                    {
                        <div class="card mb-3 shadow-sm">
                            <!-- Card Header -->
                            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Mesaj Oku</h5>
                                <div class="d-flex">
                                    <button class="btn btn-light me-2" title="Önceki"><i class="fas fa-chevron-left"></i></button>
                                    <button class="btn btn-light" title="Sonraki"><i class="fas fa-chevron-right"></i></button>
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="card-body">
                                <h5 class="text-primary">@item.Subject</h5>
                                <h6 class="text-muted">
                                    Gönderen: @item.UsserMail

                                </h6>
                                <hr>
                                <p>Merhaba,</p>
                                <p>
                                    @item.Message <!-- Dinamik Mesaj İçeriği -->
                                </p>
                                <p>Teşekkürler,<br>@item.UserName</p>
                            </div>

                            <!-- Card Footer -->
                            <div class="card-footer d-flex justify-content-between">
                                <div>
                                    <button class="btn btn-danger btn-sm" title="Sil">
                                        <i class="far fa-trash-alt"></i> Sil
                                    </button>
                                    <button class="btn btn-info btn-sm" title="Yanıtla">
                                        <i class="fas fa-reply"></i> Yanıtla
                                    </button>
                                    <button class="btn btn-warning btn-sm" title="İlet">
                                        <i class="fas fa-share"></i> İlet
                                    </button>
                                </div>
                                <button class="btn btn-secondary btn-sm" title="Yazdır">
                                    <i class="fas fa-print"></i> Yazdır
                                </button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>


